# Database (Supabase)
# Get this from Supabase Dashboard → Settings → Database → Connection parameters → URI (Transaction pooler)
DATABASE_URL=postgresql://postgres.xxxx:[YOUR-PASSWORD]@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Frontend URL (for QR codes, etc.)
FRONTEND_URL=http://localhost:3000